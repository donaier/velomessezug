- activities = Activity.ordered

#activity-list
  .row
    .columns
      - activities.each_with_index do |act, index|
        .row
          .column.large-10.large-centered
            .activity{ class: index.even? ? 'act-left' : 'act-right' }
              .dateandtime
                = act.date.to_formatted_s(:short)
                = '-'
                = act.time.to_s(:time)
              %h3= act.title
              %p= act.description.html_safe
              %hr

