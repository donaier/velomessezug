- suppliers = Supplier.all.ordered

#supplier-grid
  .row
    .columns
      %h3 Aussteller Kacheldarstellung

  .row
    - 4.times do
      - suppliers.each do |sup|
        .supplier-wrapper.column.large-2
          = link_to sup.link, target: '_blank' do
            .supplier-tile
              = image_tag(sup.logo(:care))
              .name= sup.name
