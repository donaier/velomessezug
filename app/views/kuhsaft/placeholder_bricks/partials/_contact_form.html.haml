#contact-form
  .row
    .columns.large-10.large-centered
      %h2 Kontakt
      %hr
  .row
    .columns.large-3.large-offset-1
      = simple_form_for :contact, url: contacts_create_path do |f|
        = f.input :name, placeholder: 'Name', label: false
        = f.input :email, as: :email, placeholder: 'E-Mail', label: false
        = f.input :message, as: :text, placeholder: 'Nachricht', label: false

        = f.submit 'Senden'

    .columns.large-6.large-offset-1
      %iframe{ src: "https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d1356.0580347806267!2d8.505137120993068!3d47.17516400463896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1393614867244", width: "100%", height: "400", frameborder: "0", style: "border: 2px solid black" } 

    .columns.large-1.hide-for-small
